{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    // "moduleResolution": "node",
        "moduleResolution": "bundler",
    "module": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["node", "jest", "cypress", "@testing-library/cypress"]
  },
  "include": [
    "index.d.ts",
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress",
    "cypress.d.ts"
  ]
}
